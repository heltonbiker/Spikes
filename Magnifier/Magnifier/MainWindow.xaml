<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MainWindow"
	x:Name="Window"
	Title="Magnifier"
	Width="640" Height="469" WindowStartupLocation="CenterScreen">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="#FF373737" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="MainGrid" Margin="35,45">
			<Image x:Name="MainImage" Source="Range Armoured.jpg"/>
		</Grid>
		<Grid x:Name="ClipGrid" Margin="35,45">
			<Image x:Name="ClipImage" Source="Range Armoured.jpg" Cursor="None"/>
		</Grid>
	</Grid>
</Window>