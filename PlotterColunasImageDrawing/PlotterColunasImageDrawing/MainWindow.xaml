<Window x:Class="PlotterColunasImageDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
		x:Name="window">
	
	<ScrollViewer>
    <Image x:Name="imagemControl" Stretch="None" SnapsToDevicePixels="True">
    	<Image.Source>
    		<DrawingImage x:Name="drawingImage" Drawing="{Binding grafico}" RenderOptions.EdgeMode="Aliased"/>
		</Image.Source>   
	</Image>
	</ScrollViewer>
	
</Window>
