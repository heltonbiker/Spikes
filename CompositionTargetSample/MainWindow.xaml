<Window x:Name="window" x:Class="CompositionTargetSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Composition Target Rendering Sample"
        WindowState="Maximized"
		MouseMove="MouseMoveHandler"
        MouseLeave="window_MouseLeave">

        <Canvas Name="myCanvas" IsHitTestVisible="False" RenderOptions.EdgeMode="Aliased" Width="{Binding Width, ElementName=window}" Height="{Binding Height, ElementName=window}">
        </Canvas>

</Window>